general {
    colors = true
    interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "tztime california"
order += "tztime india"

wireless _first_ {
    format_up = " %quality at %essid "
    format_down = " no internet "
}

volume master {
        format = " vol: %volume "
        format_muted = " vol: muted (%volume) "
        device = "pipewire"
}

tztime india {
    format = " in: %Y-%m-%d %I:%M %p "
    timezone = "Asia/Kolkata"
}

tztime california {
    format = " ca: %Y-%m-%d %I:%M %p "
    timezone = "America/Los_Angeles"
}
