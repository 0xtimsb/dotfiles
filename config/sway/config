set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $keychron "13364:547:Keychron_K2_Pro_Keyboard"

# brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

bindsym --input-device=$keychron Ctrl+F1 exec brightnessctl set 5%-
bindsym --input-device=$keychron Ctrl+F2 exec brightnessctl set +5%

# audio
bindsym XF86AudioRaiseVolume exec ~/.config/sway/increase_volume.sh
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym --input-device=$keychron F12 exec ~/.config/sway/increase_volume.sh
bindsym --input-device=$keychron F11 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --input-device=$keychron F10 exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# mic
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# media
bindsym --input-device=$keychron F7 exec playerctl previous
bindsym --input-device=$keychron F8 exec playerctl play-pause
bindsym --input-device=$keychron F9 exec playerctl next

# lock
bindsym --input-device=$keychron Delete exec swaylock -f -c 000000

set $out-main eDP-1
set $out-ext DP-1

output $out-main pos 0 0 res 1920x1080
output $out-ext pos 0 -1080 res 1920x1080

# to get output: swaymsg -t get_outputs

exec swayidle -w \
          timeout 300 'swaylock -f -c 000000' \
          timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
          before-sleep 'swaylock -f -c 000000'

# lock after 300s inactivity
# turn off display after next 300s 
# turn back on on resume
# lock on sleep

input "type:pointer" {
    natural_scroll enabled
    pointer_accel 0.8
}

input "type:touchpad" {
    tap enabled
    natural_scroll enabled
    dwt enabled
    pointer_accel 0.5
    middle_emulation disabled
}

input "type:keyboard" {
    repeat_delay 200
    repeat_rate 30
}

# to get inputs: swaymsg -t get_inputs

bindsym $mod+Return exec foot
bindsym $mod+q exec firefox
bindsym $mod+c exec cursor --ozone-platform=wayland
#bindsym $mod+c exec zed
bindsym $mod+m exec spotify --ozone-platform=wayland
bindsym $mod+Shift+q kill

floating_modifier $mod normal

bindsym $mod+Shift+c reload

bindsym $mod+Shift+e exec swaynag -t warning -m 'exit?' -B 'yes' 'swaymsg exit'

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+8 workspace a
bindsym $mod+9 workspace b
bindsym $mod+0 workspace c

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+8 move container to workspace a
bindsym $mod+Shift+9 move container to workspace b
bindsym $mod+Shift+0 move container to workspace c

workspace 1 output $out-ext
workspace 2 output $out-ext
workspace 3 output $out-ext

workspace a output $out-main
workspace b output $out-main
workspace c output $out-main

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
    position top
    status_command ~/.config/sway/status.sh
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

