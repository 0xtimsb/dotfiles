set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $bgimg ~/.config/a.png

# bg
exec --no-startup-id feh --bg-fill $bgimg

# border
default_border pixel 1
default_floating_border pixel 1

# picom
exec --no-startup-id picom -b

# font
font pango:monospace 10

# autostart
exec --no-startup-id dex --autostart --environment i3

# autolock
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -i $bgimg --nofork

# lock binding 
bindsym $mod+Shift+w exec --no-startup-id i3lock -i $bgimg

# network manager
exec --no-startup-id nm-applet

# bluetooth
exec --no-startup-id blueman-applet

# mouse
exec --no-startup-id xinput set-prop " USB OPTICAL MOUSE" "libinput Natural Scrolling Enabled" 1
exec --no-startup-id xinput set-prop " USB OPTICAL MOUSE" "libinput Accel Speed" 0.8

# keyboard
exec_always --no-startup-id sleep 5; xset r rate 200 30

# screenshot
bindsym $mod+Shift+s exec --no-startup-id maim --select "/home/$USER/Pictures/$(date).png"
bindsym $mod+Ctrl+Shift+s exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# refresh
set $refresh_i3status killall -SIGUSR1 i3status

# audio output
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# audio input
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ +5% && $refresh_i3status
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -5% && $refresh_i3status
bindsym $mod+XF86AudioMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id  brightnessctl set +5% && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%- && $refresh_i3status

# media
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# drag
floating_modifier $mod
tiling_drag modifier titlebar

# dmenu
bindsym $mod+d exec --no-startup-id dmenu_run

# apps
bindsym $mod+Return exec --no-startup-id st
bindsym $mod+q exec --no-startup-id firefox
bindsym $mod+z exec --no-startup-id zed
bindsym $mod+c exec --no-startup-id calibre
bindsym $mod+x exec --no-startup-id cursor
bindsym $mod+p exec --no-startup-id vlc
bindsym $mod+g exec --no-startup-id github-desktop

# quit
bindsym $mod+Shift+q kill

# navigation
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+Up sticky toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym $left resize shrink width 50px
        bindsym $down resize grow height 50px
        bindsym $up resize shrink height 50px
        bindsym $right resize grow width 50px

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $bg #1d2021
set $bg_light #3c3836
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $white #ebdbb2

#                       border    bg        text    indicator child_border
client.focused          $blue    $blue     $yellow  $green    $blue
client.focused_inactive $bg       $bg       $white  $green    $bg   
client.unfocused        $bg       $bg       $white  $green    $bg
client.urgent           $red      $red      $white  $red      $red

bar {
        position top
        status_command i3status | ~/.config/i3/status.py
        colors {
                background $bg
                statusline $white
                separator  $bg_light

                # workspace colors         border     background  text
                focused_workspace         $bg_light  $bg_light   $yellow
                active_workspace         $bg        $bg          $white
                inactive_workspace       $bg        $bg          $white
                urgent_workspace         $red       $red        $white
                binding_mode            $green    $green     $white
        }
}
